<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox spacing="20" styleClass="modal-container" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ReclamationController">

    <padding>
        <Insets top="25" right="30" bottom="25" left="30"/>
    </padding>

    <HBox alignment="CENTER_LEFT">
        <Label text="Modifier Réclamation" styleClass="modal-title" />
        <Region HBox.hgrow="ALWAYS" />
        <Button styleClass="close-btn" onAction="#closePopup">
            <graphic>
                <FontIcon iconLiteral="mdi2c-close" iconSize="24" iconColor="#9CA3AF" />
            </graphic>
        </Button>
    </HBox>

    <Separator />

    <VBox spacing="15">

        <!-- Titre -->
        <VBox spacing="5">
            <HBox spacing="2">
                <Label text="Titre" styleClass="form-label" />
                <Label text="*" styleClass="required-star" />
            </HBox>
            <TextField fx:id="titreField" promptText="Titre de la réclamation" styleClass="form-input" />
            <Label fx:id="titreError" text="Titre invalide" textFill="red" visible="false" managed="false" style="-fx-font-size: 10px;"/>
        </VBox>

        <!-- Catégorie et Projet -->
        <HBox spacing="15">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Catégorie" styleClass="form-label" />
                <TextField fx:id="categorieField" promptText="Ex: Technique" styleClass="form-input" />
                <Label fx:id="categorieError" text="Invalide" textFill="red" visible="false" managed="false" style="-fx-font-size: 10px;"/>
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Projet lié" styleClass="form-label" />
                <TextField fx:id="projetField" promptText="Ex: Projet A" styleClass="form-input" />
                <Label fx:id="projetError" text="Invalide" textFill="red" visible="false" managed="false" style="-fx-font-size: 10px;"/>
            </VBox>
        </HBox>

        <!-- Statut -->
        <VBox spacing="5">
            <Label text="Statut" styleClass="form-label" />
            <ComboBox fx:id="statutCombo" maxWidth="Infinity" styleClass="form-combo">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="En attente" />
                        <String fx:value="En cours" />
                        <String fx:value="Rèsolu" />
                        <String fx:value="Fermer" />
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="En attente" />
                </value>
            </ComboBox>
        </VBox>

        <!-- Pièce jointe (NOUVEAU) -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="btnChoisirFichier" text="Choisir un fichier" styleClass="file-choose-btn" onAction="#choisirFichier" />
            <Label fx:id="lblNomFichier" text="Aucun fichier" styleClass="file-name-label" />
        </HBox>

    </VBox>

    <!-- Boutons d'action -->
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button text="Annuler" styleClass="btn-secondary" onAction="#closePopup" />
        <Button fx:id="submitBtn" text="Enregistrer" styleClass="btn-primary" onAction="#updateReclamation" />
    </HBox>

</VBox>