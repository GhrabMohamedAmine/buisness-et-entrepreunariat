<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox prefHeight="900.0" prefWidth="1300.0" styleClass="root-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.UserTableController">
    <children>
        <VBox prefWidth="250.0" spacing="8" styleClass="sidebar">
            <padding><Insets bottom="20" left="15" right="15" top="30" /></padding>

            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 40 10;">
                <ImageView fitHeight="35.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Logo.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="Nexum" />
            </HBox>

            <VBox spacing="4" VBox.vgrow="ALWAYS">
                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="menu-item" text="Dashboard">
                    <graphic><FontIcon iconLiteral="mdi2v-view-dashboard-outline" iconSize="18" /></graphic>
                </Button>
                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="menu-item, active" text="User Management">
                    <graphic><FontIcon iconLiteral="mdi2a-account-group-outline" iconSize="18" /></graphic>
                </Button>
                <Button fx:id="btnReclamations" onAction="#handleReclamationsNavigation"
                        alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="menu-item" text="Reclamations">
                    <graphic><FontIcon iconLiteral="mdi2a-alert-circle-outline" iconSize="18" /></graphic>
                </Button>
            </VBox>
            <Button  onAction="#handleLogout" alignment="BASELINE_LEFT" maxWidth="Infinity" styleClass="menu-item" text="Log out">
                <graphic><FontIcon  iconLiteral="mdi2l-logout" iconSize="18" /></graphic>
            </Button>
        </VBox>

        <VBox spacing="0" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20" style="-fx-background-color: white; -fx-border-color: #E5E7EB; -fx-border-width: 0 0 1 0;">
                <padding><Insets left="30" right="30" /></padding>
                <TextField prefWidth="400.0" promptText="Search..." style="-fx-background-color: #F3F4F6; -fx-background-radius: 8;" />
                <Region HBox.hgrow="ALWAYS" />
                <FontIcon iconLiteral="mdi2b-bell-outline" iconSize="20" />
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-font-weight: bold;" text="Alex" />
                    <Circle fill="#DDD" radius="16" />
                </HBox>
            </HBox>

            <VBox spacing="25">
                <padding><Insets bottom="30" left="40" right="40" top="30" /></padding>

                <HBox alignment="CENTER_LEFT">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="User Management" />
                        <Label styleClass="text-muted" text="Manage team access, roles, and permissions" />
                    </VBox>
                    <Button prefHeight="40.0" prefWidth="130.0" styleClass="btn-primary" text="+ Invite User" />
                </HBox>

                <HBox spacing="20">
                    <VBox styleClass="stat-card" HBox.hgrow="ALWAYS"><HBox spacing="15"><StackPane style="-fx-background-color: #F3F0FF; -fx-background-radius: 8; -fx-padding: 8;"><FontIcon iconColor="#7C3AED" iconLiteral="mdi2a-account-outline" iconSize="22" /></StackPane><VBox><Label styleClass="text-muted" text="Total Users" /><Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="6" /></VBox></HBox></VBox>
                    <VBox styleClass="stat-card" HBox.hgrow="ALWAYS"><HBox spacing="15"><StackPane style="-fx-background-color: #DCFCE7; -fx-background-radius: 8; -fx-padding: 8;"><FontIcon iconColor="#166534" iconLiteral="mdi2c-check-circle-outline" iconSize="22" /></StackPane><VBox><Label styleClass="text-muted" text="Active" /><Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="3" /></VBox></HBox></VBox>
                    <VBox styleClass="stat-card" HBox.hgrow="ALWAYS"><HBox spacing="15"><StackPane style="-fx-background-color: #FEF9C3; -fx-background-radius: 8; -fx-padding: 8;"><FontIcon iconColor="#854D0E" iconLiteral="mdi2c-clock-outline" iconSize="22" /></StackPane><VBox><Label styleClass="text-muted" text="Pending" /><Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="2" /></VBox></HBox></VBox>
                </HBox>

                <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20;">
                        <HBox styleClass="segmented-control">
                            <ToggleButton selected="true" styleClass="seg-left" text="All" />
                            <ToggleButton styleClass="seg-center" text="Active" />
                            <ToggleButton styleClass="seg-right" text="Pending" />
                        </HBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField prefWidth="250.0" promptText="Search users..." styleClass="search-field" />
                    </HBox>

                    <TableView fx:id="userTable" fixedCellSize="65.0" prefHeight="500.0" styleClass="table-view" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colUser" prefWidth="220" text="USER" />
                            <TableColumn fx:id="colEmail" prefWidth="200" text="EMAIL" />
                            <TableColumn fx:id="colPhone" prefWidth="130" text="PHONE" />
                            <TableColumn fx:id="colRole" prefWidth="120" text="ROLE" />
                            <TableColumn fx:id="colDept" prefWidth="140" text="DEPARTMENT" />
                            <TableColumn fx:id="colStatus" prefWidth="120" text="STATUS" />
                            <TableColumn fx:id="colJoined" prefWidth="120" text="JOINED" />
                            <TableColumn fx:id="colActions" prefWidth="120" text="ACTIONS" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </VBox>
        </VBox>
    </children>
</HBox>