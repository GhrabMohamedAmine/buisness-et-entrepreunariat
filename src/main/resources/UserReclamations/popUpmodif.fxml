<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox spacing="20" styleClass="modal-container" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ReclamationController">

    <HBox alignment="CENTER_LEFT">
        <Label text="Nouvelle Réclamation" styleClass="modal-title" />
        <Region HBox.hgrow="ALWAYS" />
        <Button styleClass="close-btn" >
            <graphic>
                <FontIcon iconLiteral="mdi2p-paperclip" iconSize="24" iconColor="#9CA3AF" />
            </graphic>
        </Button>
    </HBox>

    <Separator />

    <VBox spacing="15">

        <VBox spacing="5">
            <HBox spacing="2">
                <Label text="Titre" styleClass="form-label" />
                <Label text="*" styleClass="required-star" />
            </HBox>
            <TextField fx:id="titreField" promptText="Titre de la réclamation" styleClass="form-input" />
        </VBox>

        <HBox spacing="15">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Catégorie" styleClass="form-label" />
                <TextField fx:id="categorieField" promptText="Ex: Technique" styleClass="form-input" />
            </VBox>

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Projet lié" styleClass="form-label" />
                <TextField fx:id="projetField" promptText="Ex: Projet A" styleClass="form-input" />
            </VBox>
        </HBox>

        <VBox spacing="5">
            <Label text="Statut" styleClass="form-label" />
            <ComboBox fx:id="statutCombo" maxWidth="Infinity" styleClass="form-combo">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="En attente" />
                        <String fx:value="En cours" />
                        <String fx:value="Rèsolu" />
                        <String fx:value="Fermer" />
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="En attente" />
                </value>
            </ComboBox>
        </VBox>

        <VBox alignment="CENTER" spacing="10" styleClass="attachment-drop-zone">
            <FontIcon iconLiteral="mdi2p-paperclip" iconSize="24" iconColor="#9CA3AF" />
            <Label text="Ajouter une pièce jointe (optionnel)" styleClass="attachment-label" />
        </VBox>
    </VBox>

    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button text="Annuler" styleClass="btn-secondary"  />
        <Button fx:id="submitBtn" text="Envoyer" styleClass="btn-primary" onAction="#updateReclamation" />
    </HBox>

    <padding>
        <Insets top="24" right="24" bottom="24" left="24" />
    </padding>
</VBox>