<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.CheckComboBox?>

<VBox prefHeight="520.0" prefWidth="620.0" spacing="18.0" styleClass="modal-card" stylesheets="@../../css/stylesheet.css, @../../css/buttons.css, @../../css/project-css.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tezfx.controller.UpdateProjectModalController">
    <padding>
        <Insets bottom="28.0" left="28.0" right="28.0" top="28.0" />
    </padding>

    <HBox alignment="CENTER_LEFT">
        <children>
            <VBox spacing="3.0">
                <children>
                    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Update Project" />
                    <Label styleClass="text-muted" text="Edit project details and timeline" />
                </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#onCancel" style="-fx-background-color: transparent; -fx-font-size: 18; -fx-text-fill: #9ca3af;" text="âœ•" />
        </children>
    </HBox>

    <VBox spacing="6.0">
        <children>
            <Label style="-fx-font-weight: bold;" text="Project Name *" />
            <TextField fx:id="nameField" prefHeight="44.0" styleClass="modern-text-field" />
            <Label fx:id="nameErrorLabel" managed="false" textFill="#dc2626" visible="false" />
        </children>
    </VBox>

    <VBox spacing="6.0">
        <children>
            <Label style="-fx-font-weight: bold;" text="Description" />
            <TextArea fx:id="descField" prefHeight="120.0" styleClass="modern-text-area" wrapText="true" />
            <Label fx:id="descErrorLabel" managed="false" textFill="#dc2626" visible="false" />
        </children>
    </VBox>

    <HBox spacing="16.0">
        <children>
            <VBox HBox.hgrow="ALWAYS" spacing="6.0">
                <children>
                    <Label style="-fx-font-weight: bold;" text="Start Date *" />
                    <DatePicker fx:id="startDatePicker" maxWidth="1.7976931348623157E308" prefHeight="44.0" styleClass="modern-datepicker" />
                    <Label fx:id="startDateErrorLabel" managed="false" textFill="#dc2626" visible="false" />
                </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS" spacing="6.0">
                <children>
                    <Label style="-fx-font-weight: bold;" text="Due Date *" />
                    <DatePicker fx:id="dueDatePicker" maxWidth="1.7976931348623157E308" prefHeight="44.0" styleClass="modern-datepicker" />
                    <Label fx:id="dueDateErrorLabel" managed="false" textFill="#dc2626" visible="false" />
                </children>
            </VBox>
        </children>
    </HBox>

    <VBox spacing="6.0">
        <children>
            <Label style="-fx-font-weight: bold;" text="Assigned To *" />
            <CheckComboBox fx:id="assignedUsersCombo" maxWidth="1.7976931348623157E308" styleClass="modern-combo" />
            <Label fx:id="assignedUsersErrorLabel" managed="false" textFill="#dc2626" visible="false" />
        </children>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="12.0" style="-fx-padding: 10 0 0 0;">
        <children>
            <Button minWidth="100.0" onAction="#onCancel" styleClass="btn-secondary" text="Cancel" />
            <Button minWidth="150.0" onAction="#onSave" styleClass="btn-primary" text="Save Changes" />
        </children>
    </HBox>
</VBox>
