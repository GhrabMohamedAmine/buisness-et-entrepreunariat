<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="8.0" styleClass="activity-card" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ActivityCardController">
    <padding>
        <Insets bottom="11.0" left="12.0" right="12.0" top="11.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="8.0">
        <children>
            <StackPane fx:id="iconWrap" styleClass="activity-icon-wrap">
                <children>
                    <FontIcon fx:id="activityIcon" iconLiteral="mdi2c-check-circle-outline" iconSize="14" styleClass="activity-icon" />
                </children>
            </StackPane>
            <Label fx:id="titleLabel" styleClass="activity-title" text="Task Completed" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER_LEFT" spacing="5.0" styleClass="activity-date-wrap">
                <children>
                    <StackPane styleClass="activity-date-icon-wrap">
                        <children>
                            <FontIcon iconLiteral="mdi2c-calendar-month-outline" iconSize="12" styleClass="activity-date-icon" />
                        </children>
                    </StackPane>
                    <Label fx:id="dateLabel" styleClass="activity-meta" text="22 FEB" />
                </children>
            </HBox>
        </children>
    </HBox>

    <Label fx:id="messageLabel" styleClass="activity-message" text="Activity message" wrapText="true" />
</VBox>
