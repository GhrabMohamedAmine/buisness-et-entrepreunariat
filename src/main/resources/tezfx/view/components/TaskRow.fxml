<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<HBox fx:id="taskRowRoot" alignment="CENTER_LEFT" maxWidth="Infinity" prefWidth="Infinity" spacing="20" styleClass="task-row-card"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.TaskRowController">
    <padding>
        <Insets  />
    </padding>

    <CheckBox fx:id="doneCheck" onAction="#onDoneToggle" styleClass="task-check" />
    <FontIcon fx:id="inProgressIcon" iconLiteral="mdi2c-clock-outline" iconSize="18" onMouseClicked="#onInProgressClick" styleClass="gray-icon" />

    <VBox spacing="2" HBox.hgrow="ALWAYS">
        <Label fx:id="taskTitle" style="-fx-font-weight: bold; -fx-font-size: 14;" text="Homepage Hero Section" />
        <Label fx:id="taskDesc" style="-fx-font-size: 12;" styleClass="text-muted" text="Design the main header..." />
    </VBox>

    <Label fx:id="priorityLabel" styleClass="badge-priority-high" text="HIGH" />
    <Label fx:id="statusLabel" styleClass="badge-progress" text="In Progress" />
    <Label fx:id="assignedUser" styleClass="task-assignee-pill" text="John Doe" />
    <Label fx:id="dueDateLabel" styleClass="text-muted" text="Oct 24" />
    <FontIcon fx:id="editIcon" styleClass="btn-icon-outline" iconLiteral="mdi2p-pencil-outline" iconSize="18" onMouseClicked="#onEditTask" />
    <FontIcon fx:id="deleteIcon" styleClass="btn-icon-danger" iconLiteral="mdi2d-delete-empty-outline" iconSize="18" onMouseClicked="#onDeleteTask" />
</HBox>
