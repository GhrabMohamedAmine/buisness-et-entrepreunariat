<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<HBox fx:id="taskRowRoot" alignment="CENTER_LEFT" spacing="20" styleClass="task-row-card"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tezfx.controller.TaskRowController">
    <padding>
        <Insets bottom="10" left="20" right="20" top="10" />
    </padding>

    <VBox spacing="2" HBox.hgrow="ALWAYS">
        <Label fx:id="taskTitle" style="-fx-font-weight: bold; -fx-font-size: 14;" text="Homepage Hero Section" />
        <Label fx:id="taskDesc" style="-fx-font-size: 12;" styleClass="text-muted" text="Design the main header..." />
    </VBox>

    <Label fx:id="priorityLabel" styleClass="badge-priority-high" text="HIGH" />
    <Label fx:id="statusLabel" styleClass="badge-progress" text="In Progress" />
    <HBox spacing="5" alignment="CENTER_LEFT" style="-fx-background-color: #f3f4f6; -fx-padding: 2 8; -fx-background-radius: 10;">
        <FontIcon iconLiteral="mdi2a-account" iconSize="12"/>
        <Label fx:id="assignedUser" text="John Doe" style="-fx-font-size: 11; -fx-text-fill: #4b5563;"/>
    </HBox>
    <Label fx:id="dueDateLabel" styleClass="text-muted" text="Oct 24" />
    <FontIcon styleClass="btn-icon-outline" iconLiteral="mdi2p-pencil-outline" iconSize="18" onMouseClicked="#onEditTask" />
    <FontIcon styleClass="btn-icon-danger" iconLiteral="mdi2d-delete-empty-outline" iconSize="18" onMouseClicked="#onDeleteTask" />
</HBox>
