<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="18"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.CalendarController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="12">
        <VBox spacing="4">
            <Label styleClass="title" text="Calendar" />
            <Label styleClass="subtitle" text="Projects, tasks, and public holidays (Nager.Date)" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#onPreviousMonth" styleClass="btn-secondary" text="&#60;" />
        <Label fx:id="monthLabel" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Month" />
        <Button onAction="#onNextMonth" styleClass="btn-secondary" text="&#62;" />
    </HBox>

    <GridPane fx:id="calendarGrid" hgap="8" vgap="8" VBox.vgrow="ALWAYS"/>
</VBox>
