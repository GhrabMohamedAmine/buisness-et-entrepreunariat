<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.controlsfx.control.CheckComboBox?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AddProjectController"
           style="-fx-background-color: transparent;">

    <VBox maxWidth="550" maxHeight="780" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 5);">

        <HBox alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Create New Project" style="-fx-font-size: 22; -fx-font-weight: bold;"/>
                <Label text="Start a new initiative for your team" style="-fx-text-fill: #888;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="âœ•" onAction="#handleCancel"
                    style="-fx-background-color: transparent; -fx-font-size: 18; -fx-text-fill: #aaa; -fx-cursor: hand;"/>
        </HBox>

        <VBox spacing="8">
            <Label text="Project Name *" style="-fx-font-weight: bold; -fx-text-fill: #444;"/>
            <TextField fx:id="nameField" promptText="e.g. Q4 Marketing Campaign"
                       style="-fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-padding: 10;"/>
            <Label fx:id="nameErrorLabel" managed="false" textFill="#dc2626" visible="false" />
        </VBox>

        <VBox spacing="8">
            <Label text="Description" style="-fx-font-weight: bold; -fx-text-fill: #444;"/>
            <TextArea fx:id="descField" promptText="Describe the goals and scope..." prefHeight="100" wrapText="true"
                      style="-fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8;"/>
            <Label fx:id="descErrorLabel" managed="false" textFill="#dc2626" visible="false" />
        </VBox>

        <HBox spacing="20">
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label text="Start Date" style="-fx-font-weight: bold;"/>
                <DatePicker fx:id="startDatePicker" maxWidth="Infinity" style="-fx-background-radius: 8;"/>
                <Label fx:id="startDateErrorLabel" managed="false" textFill="#dc2626" visible="false" />
            </VBox>
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label text="Due Date" style="-fx-font-weight: bold;"/>
                <DatePicker fx:id="dueDatePicker" maxWidth="Infinity" style="-fx-background-radius: 8;"/>
                <Label fx:id="dueDateErrorLabel" managed="false" textFill="#dc2626" visible="false" />
            </VBox>
        </HBox>

        <VBox spacing="8">
            <Label text="Assigned To *" style="-fx-font-weight: bold; -fx-text-fill: #444;"/>
            <CheckComboBox fx:id="assignedUsersCombo" maxWidth="Infinity"
                      style="-fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8;"/>
            <Label fx:id="assignedUsersErrorLabel" managed="false" textFill="#dc2626" visible="false" />
        </VBox>

        <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
            <Button text="Cancel" onAction="#handleCancel" prefWidth="100" prefHeight="40"
                    style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;"/>
            <Button text="Create Project" onAction="#handleCreate" prefWidth="160" prefHeight="40"
                    style="-fx-background-color: #7c4dff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        </HBox>

</VBox>
        </StackPane>
