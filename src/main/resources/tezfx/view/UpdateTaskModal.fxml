<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" styleClass="modal-card" stylesheets="@../../css/stylesheet.css, @../../css/project-css.css, @../../css/buttons.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tezfx.controller.UpdateTaskModalController">
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Update Task" textFill="#1a1a1a" />
                        <Label text="Edit task details and assignment" textFill="#737373" />
                    </children>
                </VBox>
                <Button mnemonicParsing="false" onAction="#onCancel" style="-fx-background-color: transparent;" text="âœ•" textFill="#b3b3b3" />
            </children>
        </HBox>

        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Task Name *" textFill="#4d4d4d" />
            <TextField fx:id="titleField" prefHeight="45.0" styleClass="modern-text-field" />
            <Label fx:id="titleErrorLabel" managed="false" textFill="#dc2626" visible="false" />
        </VBox>

        <VBox spacing="5.0">
            <Label style="-fx-font-weight: bold;" text="Description" textFill="#4d4d4d" />
            <TextArea fx:id="descField" prefHeight="120.0" styleClass="modern-text-area" wrapText="true" />
            <Label fx:id="descErrorLabel" managed="false" textFill="#dc2626" visible="false" />
        </VBox>

        <HBox spacing="20.0">
            <children>
                <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                    <Label style="-fx-font-weight: bold;" text="Due Date" textFill="#4d4d4d" />
                    <DatePicker fx:id="dueDatePicker" maxWidth="1.7976931348623157E308" prefHeight="45.0" styleClass="modern-datepicker" />
                    <Label fx:id="dueDateErrorLabel" managed="false" textFill="#dc2626" visible="false" />
                </VBox>
                <VBox HBox.hgrow="ALWAYS" minWidth="150.0" spacing="5.0">
                    <Label style="-fx-font-weight: bold;" text="Status" textFill="#4d4d4d" />
                    <ComboBox fx:id="statusCombo" maxWidth="1.7976931348623157E308" minWidth="150.0" prefHeight="45.0" prefWidth="150.0" styleClass="modern-combo" />
                    <Label fx:id="statusErrorLabel" managed="false" textFill="#dc2626" visible="false" />
                </VBox>
                <VBox HBox.hgrow="ALWAYS" minWidth="170.0" spacing="5.0">
                    <Label style="-fx-font-weight: bold;" text="Assigned To" textFill="#4d4d4d" />
                    <ComboBox fx:id="userCombo" maxWidth="1.7976931348623157E308" minWidth="170.0" prefHeight="45.0" prefWidth="170.0" styleClass="modern-combo" />
                    <Label fx:id="userErrorLabel" managed="false" textFill="#dc2626" visible="false" />
                </VBox>
                <VBox HBox.hgrow="ALWAYS" minWidth="130.0" spacing="5.0">
                    <Label style="-fx-font-weight: bold;" text="Priority" textFill="#4d4d4d" />
                    <ComboBox fx:id="priorityCombo" maxWidth="1.7976931348623157E308" minWidth="130.0" prefHeight="45.0" prefWidth="130.0" styleClass="modern-combo" />
                    <Label fx:id="priorityErrorLabel" managed="false" textFill="#dc2626" visible="false" />
                </VBox>
            </children>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 20 0 0 0;">
            <children>
                <Button onAction="#onCancel" prefHeight="40.0" prefWidth="100.0" styleClass="btn-secondary" text="Cancel" />
                <Button onAction="#onSaveTask" prefHeight="40.0" prefWidth="140.0" styleClass="btn-primary" text="Save" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>
