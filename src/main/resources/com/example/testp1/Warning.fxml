<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import java.net.URL?>
<fx:root type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

    <stylesheets>
        <URL value="@../../styles/nexum.css" />
    </stylesheets>

    <Region fx:id="dimOverlay" styleClass="modal-overlay" onMouseClicked="#hide"/>

    <VBox fx:id="popupCard" maxWidth="380.0" maxHeight="280.0" spacing="20"
          styleClass="popup-card" StackPane.alignment="CENTER">

        <HBox alignment="CENTER" spacing="15">
            <FontIcon iconLiteral="mdi2a-alert-circle-outline" iconColor="#F59E0B" iconSize="32"/>
            <VBox>
                <Label text="Limit Reached" styleClass="splash-title-label" style="-fx-font-size: 18px;" />
            </VBox>
        </HBox>

        <Label text="A fiscal profile for this period already exists. You can update the current profile, but you cannot create a new one."
               wrapText="true" textAlignment="CENTER" styleClass="splash-body-label" />

        <Button onAction="#hide" maxWidth="Infinity" styleClass="set-button" text="Dismiss" />
    </VBox>
</fx:root>