<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import org.kordamp.ikonli.javafx.*?>

<StackPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignUpController">

    <children>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="950.0" styleClass="login-card">
            <children>

                <VBox prefWidth="600.0" spacing="25.0" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
                    </padding>
                    <children>
                        <Label style="-fx-text-fill: #7c3aed; -fx-font-weight: bold; -fx-font-size: 12px;" text="STEP 2 OF 3" />

                        <VBox spacing="5.0">
                            <Label styleClass="title-label" text="Quick Tour" />
                            <Label styleClass="description-label" text="Discover what Nexum can do." />
                        </VBox>

                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <VBox styleClass="feature-card" HBox.hgrow="ALWAYS">
                                    <StackPane styleClass="icon-container-blue">
                                        <FontIcon iconColor="#2563eb" iconLiteral="fth-star" iconSize="24" />
                                    </StackPane>
                                    <Label styleClass="feature-title" text="Manage Projects" />
                                    <Label styleClass="feature-desc" text="Create Kanban boards, assign tasks, and track progress." wrapText="true" />
                                </VBox>

                                <VBox styleClass="feature-card" HBox.hgrow="ALWAYS">
                                    <StackPane styleClass="icon-container-green">
                                        <FontIcon iconColor="#059669" iconLiteral="fth-message-square" iconSize="24" />
                                    </StackPane>
                                    <Label styleClass="feature-title" text="Team Chat" />
                                    <Label styleClass="feature-desc" text="Real-time communication with channels and direct messages." wrapText="true" />
                                </VBox>

                                <VBox styleClass="feature-card" HBox.hgrow="ALWAYS">
                                    <StackPane styleClass="icon-container-orange">
                                        <FontIcon iconColor="#d97706" iconLiteral="fth-pie-chart" iconSize="24" />
                                    </StackPane>
                                    <Label styleClass="feature-title" text="Track Finances" />
                                    <Label styleClass="feature-desc" text="Monitor project budgets, expenses, and ROI automatically." wrapText="true" />
                                </VBox>
                            </children>
                        </HBox>

                        <Region VBox.vgrow="ALWAYS" />

                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <Button onAction="#handleBack1" styleClass="btn-back" text="Back" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Hyperlink onAction="#handleNext2" styleClass="skip-link" text="Skip tour" />
                            <Button onAction="#handleNext" prefWidth="100" styleClass="btn-primary" text="Next" />
                        </HBox>
                    </children>
                </VBox>

                <VBox prefWidth="300.0" styleClass="right-pane-sidebar">
                    <padding>
                        <Insets bottom="40.0" left="30.0" right="30.0" top="40.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <ImageView fitHeight="25.0" preserveRatio="true">
                                <Image url="@Logo.png" />
                            </ImageView>
                            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Nexum" />
                        </HBox>

                        <Region prefHeight="40.0" />

                        <VBox spacing="20.0">
                            <HBox alignment="CENTER_LEFT" spacing="12.0">
                                <StackPane>
                                    <Circle fill="#7c3aed" radius="12.0" />
                                    <FontIcon iconColor="white" iconLiteral="fth-check" iconSize="14" />
                                </StackPane>
                                <Label styleClass="step-label-active" text="Account Setup" />
                            </HBox>

                            <HBox alignment="CENTER_LEFT" spacing="12.0">
                                <StackPane>
                                    <Circle fill="transparent" radius="12.0" stroke="#7c3aed" strokeWidth="2" />
                                    <Label style="-fx-text-fill: #7c3aed; -fx-font-weight: bold;" text="2" />
                                </StackPane>
                                <Label styleClass="step-label-active" text="Feature Tour" />
                            </HBox>

                            <HBox alignment="CENTER_LEFT" spacing="12.0">
                                <StackPane>
                                    <Circle fill="transparent" radius="12.0" stroke="#d1d5db" strokeWidth="1.5" />
                                    <Label styleClass="step-label-inactive" text="3" />
                                </StackPane>
                                <Label styleClass="step-label-inactive" text="Ready" />
                            </HBox>
                        </VBox>

                        <Region VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</StackPane>
