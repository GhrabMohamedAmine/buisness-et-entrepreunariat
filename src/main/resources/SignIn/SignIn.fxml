<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@styles.css"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.SignInController">
    <children>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
              prefHeight="550.0" prefWidth="900.0" styleClass="login-card">
            <children>

                <VBox prefWidth="450.0" spacing="20.0" styleClass="left-pane" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
                    </padding>
                    <children>

                        <Button mnemonicParsing="false" styleClass="btn-back" text="Retour" onAction="#showMainPage">
                            <graphic>
                                <FontIcon iconLiteral="fth-chevron-left" />
                            </graphic>
                        </Button>

                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="title-label" text="Bon retour" />
                                <Label styleClass="description-label" text="Saisissez vos identifiants pour accéder à votre espace." />
                            </children>
                        </VBox>

                        <VBox spacing="8.0">
                            <children>
                                <Label styleClass="input-label" text="Adresse Email" />
                                <TextField fx:id="emailField" promptText="nom@entreprise.com" styleClass="login-input" />
                            </children>
                        </VBox>

                        <VBox spacing="8.0">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label styleClass="input-label" text="Mot de passe" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Hyperlink onAction="#handleForgotPassword" styleClass="forgot-link" text="Mot de passe oublié ?" />
                                    </children>
                                </HBox>
                                <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="login-input" />
                            </children>
                        </VBox>

                        <VBox spacing="8.0">
                            <children>
                                <Label styleClass="input-label" text="Captcha" />
                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <children>
                                        <ImageView fx:id="captchaImageView" fitHeight="50.0" fitWidth="150.0" preserveRatio="false" styleClass="captcha-image" />
                                        <Button fx:id="refreshCaptchaBtn" styleClass="btn-refresh" onAction="#refreshCaptcha">
                                            <graphic>
                                                <FontIcon iconLiteral="mdi2r-refresh" iconSize="20" iconColor="#7C3AED" />
                                            </graphic>
                                        </Button>
                                    </children>
                                </HBox>
                                <TextField fx:id="captchaField" promptText="Saisissez le code" styleClass="login-input" />
                                <Label fx:id="captchaError" text="Code incorrect" textFill="red" visible="false" managed="false" style="-fx-font-size: 11px;" />
                            </children>
                        </VBox>

                        <HBox spacing="10.0" alignment="CENTER">
                            <children>
                                <Button onAction="#handleSignIn" maxWidth="Infinity" mnemonicParsing="false" styleClass="btn-primary-large" text="Se connecter" HBox.hgrow="ALWAYS" />

                                <Button onAction="#handleFaceSignIn" mnemonicParsing="false" styleClass="btn-face-icon">
                                    <graphic>
                                        <FontIcon iconLiteral="mdi2f-face-recognition" iconSize="24" iconColor="#7C3AED" />
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Se connecter avec le visage" />
                                    </tooltip>
                                </Button>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label styleClass="description-label" text="Vous n'avez pas de compte ?" />
                                <Hyperlink styleClass="signup-link" text="S'inscrire" onAction="#showMainPage" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <StackPane prefWidth="450.0" styleClass="right-pane" HBox.hgrow="ALWAYS" />

            </children>
        </HBox>
    </children>
</StackPane>