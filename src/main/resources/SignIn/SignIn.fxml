<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@styles.css"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.SignInController">
    <children>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
              prefHeight="550.0" prefWidth="900.0" styleClass="login-card">
            <children>

                <VBox prefWidth="450.0" spacing="20.0" styleClass="left-pane" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
                    </padding>
                    <children>
                        <Button mnemonicParsing="false" styleClass="btn-back" text="Back" onAction="#showMainPage">
                            <graphic>
                                <FontIcon iconLiteral="fth-chevron-left" />
                            </graphic>
                        </Button>

                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="title-label" text="Welcome Back" />
                                <Label styleClass="description-label" text="Enter your credentials to access your workspace." />
                            </children>
                        </VBox>

                        <VBox spacing="8.0">
                            <children>
                                <Label styleClass="input-label" text="Email Address" />
                                <TextField fx:id="emailField" promptText="name@company.com" styleClass="login-input" />
                            </children>
                        </VBox>

                        <VBox spacing="8.0">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label styleClass="input-label" text="Password" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Hyperlink styleClass="forgot-link" text="Forgot password?" />
                                    </children>
                                </HBox>
                                <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="login-input" />
                            </children>
                        </VBox>

                        <Button onAction="#handleSignIn" maxWidth="Infinity" mnemonicParsing="false" styleClass="btn-primary-large" text="Sign In" />

                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label styleClass="description-label" text="Don't have an account?" />
                                <Hyperlink styleClass="signup-link" text="Get Started" onAction="#showMainPage" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <StackPane prefWidth="450.0" styleClass="right-pane" HBox.hgrow="ALWAYS">
                    <children>
                        <ImageView fitHeight="550.0" fitWidth="450.0" preserveRatio="false">
                            <image>
                                <Image url="@illustration_sphere.png" />
                            </image>
                        </ImageView>
                    </children>
                </StackPane>

            </children>
        </HBox>
    </children>
</StackPane>